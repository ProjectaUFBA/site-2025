{
  "format": "page",
  "id": "blogPost",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "blogPostDate": {
        "type": "Date",
        "config": {
          "label": "Data do Post",
          "placeholder": ""
        }
      },
      "authorName": {
        "type": "Text",
        "config": {
          "label": "Nome do Autor",
          "placeholder": ""
        }
      },
      "authorPicture": {
        "type": "Image",
        "config": {
          "label": "Foto do Autor",
          "constraint": {},
          "thumbnails": []
        }
      },
      "highlight": {
        "type": "Boolean",
        "config": {
          "label": "Destaque",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "postImage": {
        "type": "Image",
        "config": {
          "label": "Imagem do Post",
          "constraint": {
            "width": 500,
            "height": 500
          },
          "thumbnails": []
        }
      },
      "postTitle": {
        "type": "StructuredText",
        "config": {
          "label": "Título do Post",
          "placeholder": "Título do Post",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "postSummary": {
        "type": "StructuredText",
        "config": {
          "label": "Sumário do Post",
          "placeholder": "Sumário do Post",
          "allowTargetBlank": false,
          "multi": "paragraph"
        }
      },
      "postDescription": {
        "type": "StructuredText",
        "config": {
          "label": "Descrição do Post",
          "placeholder": "Descrição do Post",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink,image,heading6,heading5,heading4,heading3,heading2"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
